<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

      <% if current_user%>
        <div class="col-sm-12">

          <h3>Write a review!</h3>

          <%= form_for [@product, @new_rating] do |f| %>
            <%= f.select :rating, ['1', '2', '3', '4', '5'] %>
            <%= f.text_area :description, size: "60x12" %>
            <%= f.submit "Create" %>
          <% end %>
        </div>
      <% end %>

      <div class="col-sm-12">
        <h3>Reviews for <%= @product.name %></h3>

        <% @product_ratings.each do |item| %>
          <%= item.description %>
          <%= link_to fa_icon('trash'), product_product_rating_path(:product_id, id: item.id), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %><br>
        <% end %>
      </div>

    </div>

  </article>

</section>
